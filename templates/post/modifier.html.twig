{# templates/post/modifier.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Modifier la publication{% endblock %}

{% block head %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="{{ asset('styles/modifier.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <h1>Modifier la publication</h1>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="form-group">
            <label for="animal_name">Nom de l'animal :</label>
            {{ form_widget(form.animal_name, {'attr': {'class': 'form-control', 'id': 'animal_name'}}) }}
            {{ form_errors(form.animal_name) }}
        </div>

        <div class="form-group">
            <label for="species">Espèce :</label>
            {{ form_widget(form.species, {'attr': {'class': 'form-control', 'id': 'species'}}) }}
            {{ form_errors(form.species) }}
        </div>

        <div class="form-group">
            <label for="breed">Race :</label>
            {{ form_widget(form.breed, {'attr': {'class': 'form-control', 'id': 'breed'}}) }}
            {{ form_errors(form.breed) }}
        </div>

        <div class="form-group">
            <label for="age">Âge :</label>
            {{ form_widget(form.age, {'attr': {'class': 'form-control', 'id': 'age'}}) }}
            {{ form_errors(form.age) }}
        </div>

        <div class="form-group">
            <label for="gender">Genre :</label>
            {{ form_widget(form.gender, {'attr': {'class': 'form-control', 'id': 'gender'}}) }}
            {{ form_errors(form.gender) }}
        </div>

        <div class="form-group">
            <label for="description">Description :</label>
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'id': 'description'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="form-group">
            <label for="image">Image :</label>
            {{ form_widget(form.image, {'attr': {'class': 'form-control', 'id': 'image'}}) }}
            {{ form_errors(form.image) }}
        </div>

        <div class="form-group">
            <label for="is_available">Disponibilité :</label>
            {{ form_widget(form.is_available, {'attr': {'class': 'form-control', 'id': 'is_available'}}) }}
            {{ form_errors(form.is_available) }}
        </div>

        <div class="form-group">
            <label for="phone_number">Numéro de téléphone :</label>
            {{ form_widget(form.phone_number, {'attr': {'class': 'form-control', 'id': 'phone_number'}}) }}
            {{ form_errors(form.phone_number) }}
        </div>

        <div class="form-group">
            <label for="email">Email :</label>
            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'id': 'email'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="button-container">
            <a href="{{ path('post') }}" class="btn btn-secondary1">Retour à mes publications</a>
            <button type="submit" class="btn btn-primary1">Enregistrer les modifications</button>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
