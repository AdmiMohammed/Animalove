{% extends 'base.html.twig' %}

{% block title %}Mon espace{% endblock %}
{% block head %}
<style>
    /* Background */
    body {
        background: #f0f0f0 !important;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 20px;
        flex-direction: column;
    }

    /* Container for the profile form */
    .profile-container {
        background: #f0f0f0;
        border-radius: 20px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        width: 600px;
        padding: 30px 20px 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        position: relative;
        margin-top: 150px;/* Marge au-dessus du contenu */
        margin-bottom: 30px; 
    }

    /* Profile Image */
    .profile-img-container {
        position: absolute;
        top: -60px;
        background: #f0f0f0;
        border-radius: 50%;
        padding: 5px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        overflow: hidden; /* Empêche tout débordement pendant l'animation */
    }
    
    .profile-img {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 4px solid #7dc2a5;
        object-fit: cover;
        transition: transform 0.3s, border-color 0.3s; /* Ajout d'une transition pour plus de fluidité */
    }
    
    .profile-img:hover {
        transform: scale(1.1);
        border-color: #68b293; /* Ajout d'une couleur de bordure différente lors du hover */
    }
    

    /* Form styling */
    .profile-form {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 15px;
        margin-top: 100px; /* Augmenté pour laisser plus d'espace sous l'image */
    }

    .profile-form div {
        display: flex;
        flex-direction: column;
        text-align: left;
    }

    .profile-form label {
        margin-bottom: 5px;
        color: #000000;
    }

    .profile-form input[type="text"],
    .profile-form input[type="email"] {
        padding: 10px;
        border-radius: 8px;
        border: 1px solid #ddd;
        font-size: 14px;
        transition: box-shadow 0.3s, border-color 0.3s;
    }

    .profile-form input[type="text"]:focus,
    .profile-form input[type="email"]:focus {
        box-shadow: 0 0 8px rgba(68, 142, 96, 0.3);
        border-color:#7dc2a5;
        outline: none;
    }

    /* Style for the file input */
    .profile-form input[type="file"] {
        font-size: 14px;
        border: none;
        background-color: #f8f8f8;
        color: #555;
        cursor: pointer;
        padding: 10px;
        border-radius: 8px;
        transition: background-color 0.3s;
    }

    .profile-form input[type="file"]:hover {
        background-color: #e8e8e8;
    }

    /* Submit Button */
    button[type="submit"] {
        width: 50%;
        padding: 12px;
        border: none;
        border-radius: 12px;
        background-color: #7dc2a5;
        color: #fff;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s, box-shadow 0.3s;
        display: block; /* Le rend un élément de bloc */
        margin: 0 auto; /* Centre le bouton horizontalement */
    }

    button[type="submit"]:hover {
        background-color: #448e60;
        box-shadow: 0 8px 15px rgba(68, 142, 96, 0.3);
    }
    /* Navbar Styles */
        .navbar {
            position: Absolute;
            top: 0;
            left: 0;
            background: #7dc2a5; /* Couleur de la navbar */
            display: flex;
            align-items: center;
            justify-content: flex-start; /* Aligner les éléments à gauche */
            padding: 0.5rem 1rem; /* Réduire la hauteur de la navbar */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            z-index: 100;
            margin: 0;
        }
        
        .navbar__logo img {
            height: 60px; /* Réduire la hauteur du logo */
            transition: all 0.3s ease;
        }
        
        .navbar__logo img:hover {
            transform: scale(1.1);
        }
        
        /* Menu - Alignement et espacement */
        .navbar__menu {
            display: flex;
            list-style: none;
            padding: 0;
            margin: 0;
            align-items: center; /* Alignement vertical */
            justify-content: flex-start; /* Aligner les éléments à gauche */
            margin-left: auto; /* Décaler les éléments vers la droite */
        }
        
        .navbar__item {
            margin: 0 30px; /* Espacement horizontal entre les éléments */
        }
        
        .navbar__link {
            text-decoration: none;
            color: #fff;
            display: flex;
            align-items: center;
            transition: all 0.3s ease;
            font-size: 1rem;
            padding: 0.5rem 0; /* Ajouter une marge en haut et en bas */
            text-decoration: none;
        }
        
        .navbar__link:hover {
            color: #448e60;
            text-decoration: none;
        }
        
        /* Agrandir l'image utilisateur */
        .navbar__user-image {
            width: 40px; /* Taille plus petite */
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #f0f0f0;
            cursor: pointer;
            transition: transform 0.3s ease;
        }
        
        .navbar__user-image:hover {
            transform: scale(1.1);
        }
        
        /* Dropdown Menu */
        .navbar__account {
            position: relative;
        }
        
        .navbar__dropdown {
            display: none;
            position: absolute;
            right: 0;
            top: 50px;
            background: #fff;
            border: 1px solid #ddd;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            width: 150px;
            z-index: 200;
        }
        
        .navbar__account:hover .navbar__dropdown {
            display: block;
        }
        
        .navbar__dropdown a {
            display: block;
            padding: 10px;
            text-decoration: none;
            color: #333;
            transition: background 0.3s ease;
        }
        
        .navbar__dropdown a:hover {
            background: #f0f0f0;
        }
        
        /* Footer Styles */
        .footer {
            background: #7dc2a5;
            color: #fff;
            padding: 2rem;
            text-align: left;
            margin-top: auto; /* Assure que le footer est en bas */
            margin: 0;
        }
        
        .footer__content {
            display: flex;
            justify-content: space-between;
        }
        
        .footer__column {
            width: 45%;
        }
        
        .footer__logo {
            max-height: 80px;
        }
        
        .footer__column h3 {
            margin-top: 0;
            font-size: 1.2rem;
        }
        
        .footer__column p {
            font-size: 0.9rem;
            line-height: 1.5;
        }
        
        .footer__column a {
            color: #fff;
            text-decoration: none;
        }
        
        .footer__column a:hover {
            text-decoration: underline;
        }
        
        .footer__copyright {
            text-align: center;
            margin-top: 1rem;
            font-size: 0.9rem;
        }
        
        /* Smooth Scroll */
        html {
            scroll-behavior: smooth;
        }
        
        /* Mobile menu (hamburger) */
        .navbar__hamburger {
            display: none;
            flex-direction: column;
            justify-content: space-around;
            width: 30px;
            height: 20px;
            cursor: pointer;
        }
        
        .navbar__hamburger-line {
            height: 3px;
            background-color: #fff;
            width: 100%;
            border-radius: 5px;
        }
        
        .navbar__menu.active {
            display: block; /* Montre le menu sur mobile */
        }
        
        @media (max-width: 768px) {
            .navbar__menu {
                display: none;
                position: absolute;
                top: 60px;
                left: 0;
                background: #7dc2a5;
                width: 100%;
                padding: 1rem;
            }
        
            .navbar__hamburger {
                display: flex;
            }
        }   
       
</style>
{% endblock %}

